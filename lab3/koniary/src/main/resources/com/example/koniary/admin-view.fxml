<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.koniary.controllers.AdminController">

    <!-- LEWA KOLUMNA – STADNINY -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Stables" style="-fx-font-size: 18px;" />

            <TableView fx:id="stableTable" prefWidth="300">
                <columns>
                    <TableColumn fx:id="colStableName" text="Name" prefWidth="120"/>
                    <TableColumn fx:id="colStableCapacity" text="Capacity" prefWidth="80"/>
                    <TableColumn fx:id="colStableLoad" text="Load" prefWidth="80"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button text="Add Stable" onAction="#addStable" />
                <Button text="Remove" onAction="#removeStable" />
            </HBox>

            <Button text="Sort by Load" onAction="#sortStables" />
        </VBox>
    </left>

    <!-- PRAWA KOLUMNA – KONIE -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Horses" style="-fx-font-size: 18px;" />

            <HBox spacing="10">
                <TextField fx:id="filterField" promptText="Filter by name" onAction="#filterHorses"/>
                <ComboBox fx:id="conditionCombo" onAction="#filterHorses"/>
            </HBox>

            <TableView fx:id="horseTable">
                <columns>
                    <TableColumn fx:id="colHorseName" text="Name" prefWidth="120"/>
                    <TableColumn fx:id="colHorseBreed" text="Breed" prefWidth="120"/>
                    <TableColumn fx:id="colHorseAge" text="Age" prefWidth="60"/>
                    <TableColumn fx:id="colHorseWeight" text="Weight" prefWidth="80"/>
                    <TableColumn fx:id="colHorsePrice" text="Price" prefWidth="80"/>
                    <TableColumn fx:id="colHorseStatus" text="Status" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button text="Add Horse" onAction="#addHorse" />
                <Button text="Remove Horse" onAction="#removeHorse" />


                <Button text="Save to .dat" onAction="#saveData"/>
                <Button text="Load from .dat" onAction="#loadData"/>
                <Button text="Show Horse Count" onAction="#showHorseCount"/>
                <Button text="Export CSV" onAction="#exportCSV"/>
            </HBox>
        </VBox>
    </center>



</BorderPane>
